<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/filmItemZone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:layout_margin="10dp"
    >

    <ImageView
        android:id="@+id/isFavoriteImg"
        android:translationZ="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/filmImageCard"
        app:layout_constraintTop_toTopOf="@+id/filmImageCard"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <androidx.cardview.widget.CardView
        android:id="@+id/filmImageCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"

        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/filmName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/filmImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="centerCrop"

            tools:srcCompat="@drawable/forrestgump" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/filmName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/filmImageCard"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Film name" />

    <TextView
        android:id="@+id/shortDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/filmImageCard"
        app:layout_constraintTop_toBottomOf="@id/filmName"
        tools:text="short descriptions"/>

</androidx.constraintlayout.widget.ConstraintLayout>